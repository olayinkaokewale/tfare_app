<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/slide_1_bg">

    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="@dimen/img_width_height"
        android:layout_height="@dimen/img_width_height"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/ic_launcher_light" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/slide_1_title"
        android:textColor="@android:color/white"
        android:layout_marginLeft="@dimen/slide_intro_txt"
        android:layout_marginStart="@dimen/slide_intro_txt"
        android:layout_marginRight="@dimen/slide_intro_txt"
        android:layout_marginEnd="@dimen/slide_intro_txt"
        android:gravity="center"
        android:textSize="@dimen/slide_intro_txt"
        android:textStyle="normal" />

    </LinearLayout>

</RelativeLayout>